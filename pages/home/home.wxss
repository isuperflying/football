/* pages/home/home.wxss */
@import "../../utils/animate.wxss";
@import "../../utils/base_bg.wxss";
.question{
  width: 90%;
  margin-top: 10%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.title{
  width: 90%;
  line-height: 100rpx;
}
.answers{
  width: 90%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: left;
  margin: 30rpx 0;
}
.option{
  width: 100%;
  display: flex;
  justify-content: space-between;
  color: #333;
  background: #fff;
  border-radius: 12rpx;
  height: 90rpx;
  line-height: 90rpx;
}
.option text{
  margin-left: 30rpx;
  font-size: 12pt;
}