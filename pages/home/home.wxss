/* pages/home/home.wxss */
@import "../../utils/animate.wxss";
@import "../../utils/base_bg.wxss";
.question{
  width: 100%;
  height: 100%;
}

.answers{
  width: 90%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: left;
  margin: 30rpx 0;
}
.option{
  width: 100%;
  display: flex;
  justify-content: space-between;
  color: #333;
  background: #fff;
  border-radius: 12rpx;
  height: 90rpx;
  line-height: 90rpx;
}
.option text{
  margin-left: 30rpx;
  font-size: 12pt;
}

.right {
  /*选择正确的答案颜色*/
  background: #2db475;
  border: 2px solid #fff;
  color: #fff;
}

.rightHit{
  /*选择正确的提示答案颜色*/
  background: #2db475;
  color: #fff;
  border: 2px solid #fff;
}

.error {
  /*选择错误的答案颜色*/
  background: #EE5C42;
  color: #fff;
}