/* pages/home/home.wxss */
@import "../../utils/animate.wxss";
@import "../../utils/base_bg.wxss";
.question{
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  margin-top: 140rpx;
}
.back-view{
  position: absolute;
  left: 20rpx;
  top: 66rpx;
  z-index: 10000;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.back-view text{
  font-size: 13pt;
  margin-left: 12rpx;
}
.back-view image{
  width: 50rpx;
  height: 50rpx;
}
.title{
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 12rpx;
}

.title image{
  width: 660rpx;
  height: 562rpx;
  color: #333;
  font-weight: 500;
  font-size: 18pt;
}

.title-text{
  position: absolute;
  width: 80%;
  z-index: 10;
  top: 400rpx;
  left:88rpx;
  color: #fff;
  font-weight: 500;
  font-size: 16pt;
}

.countdown-view{
  width:100%;
  position: absolute;
  z-index: -99;
  top: 146rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.total-score{
  width: 240rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.total-score text{
  color: #fff152;
  font-size: 16pt;
  font-weight: 600
}
.cir{
  width: 480rpx;
  height: 200rpx;
  z-index: 100;
  position: absolute;
  top: 30rpx;
  left: 200rpx;
}

.answer-view{
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: -72rpx;
}

.answers{
  width: 70%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: left;
  margin: 24rpx 0;
}
.option{
  width: 100%;
  display: flex;
  justify-content: space-between;
  color: #333;
  background: #fff;
  border-radius: 30rpx;
  height: 96rpx;
  line-height: 96rpx;
  border: 2px solid #f5f5f5;
}
.option text{
  margin-left: 30rpx;
  font-size: 12pt;
}

.right {
  /*选择正确的答案颜色*/
  background: #2db475;
  border: 2px solid #fff;
  color: #fff;
}

.rightHit{
  /*选择正确的提示答案颜色*/
  background: #2db475;
  color: #fff;
  border: 2px solid #fff;
}

.error {
  /*选择错误的答案颜色*/
  background: #EE5C42;
  color: #fff;
}
