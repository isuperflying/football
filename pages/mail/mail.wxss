/* pages/mail/mail.wxss */
page{
  width: 100%;
  background: #fdf9f1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.back-view{
  position: absolute;
  left: 20rpx;
  top: 76rpx;
  z-index: 10000;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.back-view text{
  font-size: 13pt;
  margin-left: 12rpx;
  color: #333;
}
.back-view image{
  width: 50rpx;
  height: 50rpx;
}
.content {
  width: 100%;
  height: 100%;
  overflow-x: hidden;
}

.mail-list {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-left: 1%;
  margin-top: 5%;
}

.mail-item {
  width: 46%;
  height: auto;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  border: 2px solid #fff;
  border-radius: 3px;
  background-color: #fff;
  box-shadow: 0px 2px 1px #ccc;
  margin: 1%;
  justify-content: center;
  align-items: center;
  position: relative;
}

.mail-img {
  width: 96%;
  height: 280rpx;
  margin-top: 10rpx;
  margin-left: 2%;
  margin-right: auto;
  margin-bottom: 0px;
}
.mail-img-lock{
  width: 40px;
  height: 40px;
  position: absolute;
  right: 0;
  top: 0
}
.mail-title{
  font-size: 14px;
  margin: 12rpx;
}

.total-score{
  width: 80%;
  display: flex;
  flex-direction: row;
  justify-content: center;
   margin-top: 20%;
}
.score-normal{
  color: #333;
  font-size: 16pt;
  font-weight: 600
}
.score-text{
  color: #ff5555;
  font-size: 16pt;
  font-weight: 600;
  margin-right: 10rpx;
}