/* pages/mail/mail.wxss */
page{
  width: 100%;
  background: #eeeeee;
}

.content {
  width: 100%;
  height: 100%;
  overflow-x: hidden;
}

.mail-list {
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-left: 1%;
  margin-top: 20%;
}

.mail-item {
  width: 46%;
  height: auto;
  display: flex;
  flex-direction: column;
  flex-wrap: wrap;
  border: 2px solid #fff;
  border-radius: 3px;
  background-color: #fff;
  box-shadow: 0px 2px 1px #ccc;
  margin: 1%;
  justify-content: center;
  align-items: center;
  position: relative;
}

.mail-img {
  width: 96%;
  height: 280rpx;
  margin-top: 10rpx;
  margin-left: 2%;
  margin-right: auto;
  margin-bottom: 0px;
}
.mail-img-lock{
  width: 40px;
  height: 40px;
  position: absolute;
  right: 0;
  top: 0
}
.mail-title{
  font-size: 14px;
  margin: 12rpx;
}